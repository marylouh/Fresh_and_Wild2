@model FreshAndWild2.Models.Produit;
@{ Layout = "_LayoutDuSite";
    ViewBag.title = "Details Produit";}


<main id="main">



    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>@Model.Nom</h2>
                <ol>
                    <li><a href="/produit">La Boutique</a></li>
                    <li>@Model.Nom</li>
                </ol>
            </div>

        </div>
    </section>



    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-6">

                    <div class="image-detail">
                        @{ var ip = "~/img/Produits/p" + Model.Id + ".jpg";}
                        <img src="@Url.Content(ip)" />
                    </div>


                </div>



                <div class="col-lg-6">

                    <div class="portfolio-description">
                        <h2>@Model.Nom</h2>
                        <p>
                            @Model.Description
                        </p>
                    </div>

                    <div class="portfolio-info">
                        <h3>Informations</h3>
                        <ul>
                            <li><strong>Categorie</strong>: catégories</li>
                            <li><strong>Conditionnement</strong>: @Model.Conditionnement</li>
                            <li><strong>Fabriqué par</strong>: @Model.Producteur.NomFerme</li>
                        </ul>
                    </div>

                    <div class="prix-info">
                        <div class="row">
                            <div class="col-md-12 bottom-rule">
                                <h3 class="prix-info">Prix : Eur @Model.Prix</h3>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-4 col-sm-12">
                        <select class="form-control" name="select">
                            <option value="" selected="">Quantité</option>
                            <option value="">1</option>
                            <option value="">2</option>
                            <option value="">3</option>
                        </select>
                    </div>

                    <div class="product-grid" style="text-align: left;">
                        @Html.ActionLink("AJOUTER AU PANIER", "AjouterAuPanier", "Panier", new { id = Model.Id }, new { @class = "add_to_cart" });
                    </div>

                </div>

            </div>

        </div>
    </section>


</main>
